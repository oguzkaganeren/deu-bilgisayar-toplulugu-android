<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profilebackground" />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/profilebackground"
                android:background="@drawable/profile_circular"
                android:layout_centerInParent="true"
                android:elevation="5dp"
                app:civ_border_color="#FF000000"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/profile_layout"
            android:orientation="vertical">
            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/user_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Name Surname"
                android:textColor="#BDBDBD"

                android:textSize="24sp"
                android:textStyle="bold" />
            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/user_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#BDBDBD"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="italic"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:background="@mipmap/profilebottom"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image">
            <TableRow android:weightSum="1"
                android:layout_margin="20dp"
                android:gravity="center_horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:id="@+id/profile_self"
                android:src="@mipmap/self"/>
            </TableRow>
            <TableRow android:weightSum="5"
                android:layout_margin="10dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_password"
                    android:src="@mipmap/password"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:id="@+id/profile_mail"
                android:src="@mipmap/mail"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:id="@+id/profile_github"
                android:src="@mipmap/githubpage"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"
                android:id="@+id/profile_googleplay"
                android:src="@mipmap/googleplay"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_appstore"
                    android:src="@mipmap/appstore"/>
            </TableRow>
            <TableRow android:weightSum="5"
                android:layout_margin="10dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_website"
                    android:src="@mipmap/websitepage"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:id="@+id/profile_whattsapp"
                android:src="@mipmap/whatsapppage"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:id="@+id/profile_slack"
                android:src="@mipmap/slack"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"
                android:id="@+id/profile_linkedin"
                android:src="@mipmap/linkedinpage"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_skype"
                    android:src="@mipmap/skypepage"/>
            </TableRow>
            <TableRow android:weightSum="5"
                android:layout_margin="10dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_facebook"
                    android:src="@mipmap/facebookpage"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_instagram"
                    android:src="@mipmap/instagrampage"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/profile_snapchat"
                    android:src="@mipmap/snapchat"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/profile_twitter"
                    android:src="@mipmap/twitterpage"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/profile_youtube"
                    android:src="@mipmap/youtubepage"/>
            </TableRow>
        </TableLayout >
    </RelativeLayout>
</ScrollView>