<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/specback" />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#2196F3"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="Name Surname"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/edit_namesurname"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:padding="4dp"
                android:contextClickable="true"
                android:scaleType="fitXY"
                android:background="@drawable/editor_pencil"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignRight="@id/user_profile_name"
                android:layout_marginRight="25dp"
                android:layout_alignBottom="@id/user_profile_name"/>
            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:text="Your Status"
                android:textColor="#fff"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/edit_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:padding="4dp"
                android:contextClickable="true"
                android:scaleType="fitXY"
                android:background="@drawable/editor_pencil"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignRight="@id/user_profile_short_bio"
                android:layout_marginRight="25dp"
                android:layout_alignBottom="@id/user_profile_short_bio"/>
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/specback"
            android:background="@drawable/profile_circular"
            android:layout_marginTop="-40dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginLeft="20dp"
            android:elevation="5dp"
            app:civ_border_color="#FF000000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:contextClickable="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"
            android:background="@drawable/editor_pencil"
            android:src="@drawable/ic_photo_library_black_24dp"
            android:elevation="5dp"
            android:layout_alignRight="@id/user_profile_photo"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_changepass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Change your password"
                />
            <ImageView
                android:id="@+id/edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:elevation="4dp"
                android:background="@drawable/editor_pencil"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignBottom="@id/txt_changepass"
                android:layout_alignRight="@id/txt_changepass"
                />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>