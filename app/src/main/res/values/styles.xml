<resources>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>
    <!-- Base application theme. -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edittext_normal</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/edittext_active</item>

        <item name="colorControlActivated">@color/edittext_active</item>
        <item name="colorControlNormal">@color/edittext_normal</item>
        <item name="colorControlHighlight">@color/edittext_highlight</item>
    </style>
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
</resources>
